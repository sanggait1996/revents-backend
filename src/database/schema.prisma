generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SEX {
  MALE
  FEMALE
  OTHER
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name         String
  sex          SEX    @default(OTHER)
  nationality  String
  age          Int
  marialStatus String

  flights Flight[]
}

model Flight {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  returningAt   DateTime
  leavingAt     DateTime
  amount        Int
  passengerSize Int      @default(1)
  country       String
  destination   String
  promoCode     String?

  users User[]
}
